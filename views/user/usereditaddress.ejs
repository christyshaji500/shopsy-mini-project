<h2 style="text-decoration: underline; margin-left: 38%; padding-bottom: 20px; color: brown; font-size: xxx-large;" >EDIT ADDRESS </h2>
<div class="container">
    <div class="row">

<form action="/Editaddress" method="post" id="input-control ">
    <div class=" input-control mb-3">
      <label for="exampleInputEmail1" class="form-label">Name</label>
      <input type="text" class="form-control" name="firstname" id="firstname" aria-describedby="emailHelp" value=<%= address.firstname %> required>
       <small>Error message</small>
     
    </div>
    <!-- <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Firstname</label>
      <input type="password" class="form-control" id="exampleInputPassword1" name="firstname">
    </div> -->
    <div class="input-control mb-3">
        <label for="exampleInputPassword1" class="form-label">Lastname</label>
        <input type="text" class="form-control" id="lastname" name="lastname" value=<%= address.lastname %> required>
         <small>Error message</small>
      </div>
      <div class="input-control mb-3">
        <label for="exampleInputPassword1" class="form-label">Country</label>
        <input type="text" class="form-control" id="country" name="country" value=<%= address.country %> required>
         <small>Error message</small>
      </div>
      <div class="input-control mb-3">
        <label for="exampleInputPassword1" class="form-label"> Street Address</label>
        <input type="text" class="form-control" id="address" name="address" value=<%= address.address %> required>
         <small>Error message</small>
      </div>
      <div class="input-control mb-3">
        <label for="exampleInputPassword1" class="form-label">State/Country</label>
        <input type="text" class="form-control" id="state" name="state" value=<%= address.country %> required>
         <small>Error message</small>
      </div>
      <div class="input-control mb-3">
        <label for="exampleInputPassword1" class="form-label">Postcode/Zip</label>
        <input type="number" class="form-control" id="zip" name="zip" value=<%= address.zip %> required>
         <small>Error message</small>
      </div>
      <div class="input-control mb-3">
        <label for="exampleInputPassword1" class="form-label">Phone</label>
        <input type="number" class="form-control" id="number" name="phone" value=<%= address.phone %> required>
         <small>Error message</small>
      </div>
      <div class="input-control mb-3">
      <input type="hidden" name="id" value="<%= address._id %>">
    <button type="submit" id="btned" class="btn btn-primary">Submit</button>
  </div>
    <% if(typeof message !== 'undefined'){%>
      <p style="color:green"><%= message %></p>
  <% } %>
  </form>
</div>
<style>
  .input-control small{
    visibility: hidden;
  }
  .input-control.error small{
    color: red;
    visibility: visible;
  }

  </style>
</div>
